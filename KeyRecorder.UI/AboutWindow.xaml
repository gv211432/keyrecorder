<Window x:Class="KeyRecorder.UI.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About KeyRecorder" Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Logo -->
        <Border Grid.Row="0" Background="#0d0f10" Padding="30,25">
            <Image Source="/Assets/logo-name.png" Stretch="Uniform" Height="80"/>
        </Border>

        <!-- Content -->
        <StackPanel Grid.Row="1" Margin="30,25" VerticalAlignment="Center">
            <TextBlock Text="Keyboard Activity Monitor" FontSize="16" Foreground="#0085d8"
                       FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Version 1.0.0" FontSize="14" Foreground="#0d0f10"
                       HorizontalAlignment="Center" Margin="0,0,0,5"/>

            <TextBlock Text="Built with .NET 10" FontSize="12" Foreground="#666"
                       HorizontalAlignment="Center" Margin="0,0,0,25"/>

            <TextBlock TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"
                       FontSize="12" Foreground="#0d0f10" Margin="0,0,0,15">
                <Run Text="A local-only keyboard activity recorder for Windows,"/>
                <LineBreak/>
                <Run Text="designed for debugging and productivity tracking."/>
            </TextBlock>

            <Border Background="#eeeff1" Padding="15" CornerRadius="6" Margin="0,10,0,0">
                <StackPanel>
                    <TextBlock Text="Features:" FontWeight="Bold" Foreground="#0085d8" FontSize="12" Margin="0,0,0,8"/>
                    <TextBlock Text="✓ 24/7 Background Recording" FontSize="11" Foreground="#0d0f10" Margin="0,2"/>
                    <TextBlock Text="✓ Triple Database Architecture" FontSize="11" Foreground="#0d0f10" Margin="0,2"/>
                    <TextBlock Text="✓ Automatic Crash Recovery" FontSize="11" Foreground="#0d0f10" Margin="0,2"/>
                    <TextBlock Text="✓ Local-Only (No Cloud, No Telemetry)" FontSize="11" Foreground="#0d0f10" Margin="0,2"/>
                    <TextBlock Text="✓ Configurable Retention Policies" FontSize="11" Foreground="#0d0f10" Margin="0,2"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#eeeff1" Padding="20" BorderBrush="#d0d0d0" BorderThickness="0,1,0,0">
            <StackPanel>
                <TextBlock Text="© 2026 KeyRecorder. For personal use only."
                           FontSize="10" Foreground="#666" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                <Button Content="Close" Width="100" Height="32"
                        Background="#0085d8" Foreground="White" BorderThickness="0"
                        FontWeight="SemiBold" Click="CloseButton_Click" HorizontalAlignment="Center">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#0085d8"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4" Padding="10,5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#0096ed"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
